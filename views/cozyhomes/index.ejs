<% layout('layouts/boilerplate') %>
<div><a href="/cozyhomes/new">Add Cozy Home</a></div>
<h1>All Cozy Homes</h1>
    <% for (let cozyhome of cozyhomes) {%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="<%= cozyhome.image %>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= cozyhome.title %>
                        </h5>
                        <p class="card-text"><%= cozyhome.description %></p>
                        <p class="card-text">
                            <small class="text-muted"><%= cozyhome.location %></small>
                        </p>
                        <a class="btn btn-primary" href="/cozyhomes/<%= cozyhome._id %>">View <%= cozyhome.title %></a>
                    </div>
                </div>
            </div>
        </div>
    <%}%>

